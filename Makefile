# ---------------------------------------------------------------------------
# Definitions
# ---------------------------------------------------------------------------
include Config.mk

# ---------------------------------------------------------------------------
# Targets
# ---------------------------------------------------------------------------
all: release

release:
	$(MAKE) -C dlls release_mm
	$(MAKE) -C dlls release_std

debug:
	$(MAKE) -C dlls debug_mm
	$(MAKE) -C dlls debug_std

clean:
	$(MAKE) -C dlls $@
	$(MAKE) -C NNSim $@
	$(MAKE) -C NNSim/som $@

rebuild:
	$(MAKE) -C dlls $@
	$(MAKE) -C NNSim $@
	$(MAKE) -C NNSim/som $@

# ---------------------------------------------------------------------------
# Rules
# ---------------------------------------------------------------------------
